<p class="item-pills">
    {% for item in items %}
        {% include 'statistics/_item_pill.html.twig' %}
    {% endfor %}

    {% for matchWord in matchWords %}
        {% set itemsFiltered = items|filterItemsMatching(matchWord) %}

        {% if itemsFiltered|length > 1 %}
            <br />

            <span class="badge bg-primary p-2 my-1">
                {{ matchWord|humanFriendlyRegexp }} ({{ itemsFiltered|length }}&times;):
            </span>

            {% for item in itemsFiltered %}
                {% include 'statistics/_item_pill.html.twig' %}
            {% endfor %}
        {% endif %}
    {% endfor %}
</p>
